:root{--color-background: #E0E0E0;--color-text: rgba(0, 0, 0, .87);--color-text-meta: rgba(0, 0, 0, .4);--color-text-hover: #1e70bf;--color-border: rgba(0, 0, 0, .3);--color-header-background: #ffffff}[data-theme=dark]{--color-background: #303030;--color-text: rgba(255, 255, 255, .6);--color-text-meta: rgba(255, 255, 255, .25);--color-text-hover: #bdebfc;--color-border: rgba(255, 255, 255, .3);--color-header-background: #424242}html,body{padding:0;margin:0;background:var(--color-background)}body{font-family:roboto,sans-serif;color:var(--color-text)}.uk-card,input.uk-input,textarea.uk-textarea{background:var(--color-header-background);box-shadow:none}div.uk-card-header,div.uk-card-body,div.uk-card-footer{padding:1em;color:var(--color-text)}.category-header h2,h3,span{color:var(--color-text)}a:hover{color:var(--color-text-hover)}div.uk-container{max-width:1800px}hr{border-top:1px solid var(--color-border)}span.category-header{display:flex;align-items:center}span.category-header h2{margin:.5rem;font-size:1.5rem}.uk-h3,h3{font-size:1.25rem}#header{top:0;position:fixed;margin-top:1%;width:inherit;padding-right:5%;max-width:500px}#header .description{color:var(--color-text);margin-bottom:1rem}#mobile-banner .uk-offcanvas-bar{padding:0;background:var(--color-header-background);color:var(--color-text)}#mobile-banner div.description{padding:1em}#mobile-banner div.links{padding:1em}#header a,#mobile-banner a{color:var(--color-text)}#header a i,#mobile-banner a i{margin-right:.5rem}#header a:hover,#mobile-banner a:hover{color:var(--color-text-hover)}.about-me button.uk-icon-button{background:var(--color-background);color:var(--color-text);margin-left:auto}.education .badges{display:flex;justify-content:space-around}.education .badges a:first-child{display:flex}.skills h3{margin:1rem 0 .75rem}.skills div.block{display:flex;padding-left:2rem}.skills span.devicons{font-size:1.6rem}.skills span.icon{display:inline-flex;margin-right:1.5rem;align-items:center}.skills i.fas,.skills i.fad,.skills span.devicons{margin-right:.25rem}.posts div.uk-card-header,.repos div.uk-card-header{border:none}.posts h3.uk-card-title b,.repos h3.uk-card-title b{font-size:1rem;color:var(--color-text)}.posts div.uk-card-body,.repos div.uk-card-body{padding-bottom:4rem}.posts div.uk-card-footer,.repos div.uk-card-footer{position:absolute;width:100%;bottom:0;margin-top:1rem}.posts a.uk-button-text,.repos a.uk-button-text{color:var(--color-text)}.posts span.right,.repos span.right{float:right}.talks div.uk-card-media-left{width:20rem;height:10rem}.talks div.uk-card-body h3{margin-bottom:.5rem}.talks div.uk-card-body p{margin:0}.contact{margin-bottom:1rem!important}.contact form .row{display:flex;justify-content:space-between}.contact form .row input{width:49%}.contact input,.contact button,.contact textarea{border:none}.contact button.uk-button{float:right;background:#babbbc}.contact button.uk-button:hover{float:right;background:#888}button#mobile{margin-top:1rem;position:fixed;background:var(--color-header-background);border:none}button#mobile rect{color:var(--color-text)}.timeline-container{width:90%;margin:0 auto}.timeline-container .timeline-item{padding:1em 2em;position:relative;border-left:2px solid var(--color-border)}.timeline-container .timeline-item h3{margin:.25% 0 1%}.timeline-container .timeline-item p{font-size:1rem}.timeline-container .timeline-item span.date::after{width:1rem;height:1rem;display:block;top:1.2rem;position:absolute;left:-.55rem;border-radius:10px;content:'';border:2px solid var(--color-border);background:var(--color-background)}.timeline-container .timeline-item:last-child{border-image:linear-gradient(to bottom,var(--color-border) 60%,var(--color-border)) 1 100%}@media only screen and (min-width:960px){button#mobile{display:none}}@media only screen and (max-width:960px){#header{display:none}button#mobile{left:1rem}div.uk-container{margin-left:4rem}.skills div.block{display:block}}